<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="40dp"
    android:layout_height="40dp">

    <View
        android:id="@+id/view_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        tools:background="@color/error_100" />

    <com.codesample.presentation.customViews.mapPlaceSelection.TicketPlaceSelectionView
        android:id="@+id/view_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_transparent_50" />

</FrameLayout>