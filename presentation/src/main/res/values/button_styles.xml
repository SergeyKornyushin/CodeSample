<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius_big</item>
        <item name="android:textAppearance">@style/Text.System.Button.L</item>
    </style>

    <style name="Button.Big" parent="Button">
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Big.Filled" parent="Button.Big">
        <item name="backgroundTint">@color/button_filled_wave_background_selector</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="Button.Big.Outlined" parent="Button.Big">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
        <item name="strokeColor">@color/button_filled_wave_background_selector</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="Button.Big.Minimal" parent="Button.Big">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>

    <style name="Button.Small" parent="Button">
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Small.Filled" parent="Button.Small">
        <item name="backgroundTint">@color/button_filled_wave_background_selector</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="Button.Small.Outlined" parent="Button.Small">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
        <item name="strokeColor">@color/button_filled_wave_background_selector</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="Button.Small.Minimal" parent="Button.Small">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>
</resources>